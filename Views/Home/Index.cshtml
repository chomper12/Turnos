@{
    ViewData["Title"] = "Home Page";
}
<br />
<br />
<br />
<div class="row">
    <div class="col s12 m4">
        <div class="card">
            <div class="card-image center orange">
                <i class="material-icons large white-text">star</i>
                
                <a class="btn-floating halfway-fab waves-effect waves-light red" asp-controller="Especialidad" asp-action="Create"><i class="material-icons">add</i></a>
            </div>
            <div class="card-content">
                <span class="card-title">Especialidades:</span>
                <p>Aqui podras dar de alta nuevas Especialidades, modificarlas y borrarlas. A la espera de ser asignadas a un medico</p>
            </div>
            <div class="card-action blue-grey darken-3">
                <a asp-controller="Especialidad" asp-action="Index">Ver mas </a>
            </div>
        </div>
    </div>
    <div class="col s12 m4">
        <div class="card">
            <div class="card-image center light-blue darken-1">
                <i class="material-icons large white-text">face</i>

                <a class="btn-floating halfway-fab waves-effect waves-light red" asp-controller="Medico" asp-action="Create"><i class="material-icons">add</i></a>
            </div>
            <div class="card-content">
                <span class="card-title">Medicos:</span>
                <p>Aqui podras dar de alta nuevos Medicos, modificar sus datos y relacionarlos con su Especialidad </p>
            </div>
            <div class="card-action blue-grey darken-3">
                <a asp-controller="Medico" asp-action="Index">Ver mas </a>
            </div>
        </div>
    </div>
    <div class="col s12 m4">
        <div class="card">
            <div class="card-image center green accent-4">
                <i class="material-icons large white-text">assignment_ind</i>

                <a class="btn-floating halfway-fab waves-effect waves-light red" asp-controller="Paciente" asp-action="Create"><i class="material-icons">add</i></a>
            </div>
            <div class="card-content">
                <span class="card-title">Pacientes:</span>
                <p>Aqui podras dar de alta nuevos Pacientes, modificar sus datos y borrarlos e la base de datos </p>
            </div>
            <div class="card-action blue-grey darken-3">
                <a asp-controller="Paciente" asp-action="Index">Ver mas </a>
            </div>
        </div>
    </div>
    <div class="col s12 m4">
        <div class="card">
            <div class="card-image center brown accent-4">
                <i class="material-icons large white-text">access_time</i>

            </div>
            <div class="card-content">
                <span class="card-title">Pacientes:</span>
                <p>Aqui podras dar de alta nuevos Turnos para asignarle un medico particular </p>
            </div>
            <div class="card-action blue-grey darken-3">
                <a asp-controller="Turno" asp-action="Index">Asignar Turno </a>
            </div>
        </div>
    </div>
</div>