@model Turnos.Models.Especialidad

<h4>Especialidad</h4>

<div>
    <form class="col s12" asp-action="Edit">
        <div asp-validation-summary="ModelOnly"></div>
        <input type="hidden" asp-for="IdEspecialidad" />
        <div class="row">
            <div class="input-field col s6">
                <i class="material-icons prefix">markunread_mailbox</i>
                <label asp-for="Descripcion"></label>
                <input asp-for="Descripcion" />
                <span asp-validation-for="Descripcion"></span>
            </div>      
        </div>
         <div class="row">
             <div class="col s6 m6">
                <input type="submit" value="Guardar" class="btn btn-primary"/>
             </div>
             <div class="col s6 m6">
                 <a asp-action="Index" class="btn waves-effect waves-light"><i class="material-icons prefix">undo</i> volver</a>
             </div>
         </div>
    </form>
</div>