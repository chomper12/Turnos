@model IEnumerable<Turnos.Models.Especialidad>
<!DOCTYPE html>
<html>
    <head>
        <title>Especialidades</title>
    </head>
    <body>
        <p>
            <a asp-action="Create" class="btn-floating btn-large green darken-1"><i class="material-icons">person_add</i></a>
        </p>
        <table class="responsive-table highlight z-depth-3 orange accent-1">
            <thead class="orange accent-4 white-text">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Descripcion)</th>
                </tr>
            </thead>
            <tbody> 
                @*aqui colocamos, mas adelante el codigo para mostrar los registros de la base de datos*@
                @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Descripcion)
                    </td>
                    <td>
                        
                        <a asp-action="Edit" asp-route-id="@item.IdEspecialidad"><i class="material-icons">edit</i></a>
                        <a asp-action="Delete" asp-route-id="@item.IdEspecialidad"> <i class="material-icons">delete</i></a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </body>
</html>