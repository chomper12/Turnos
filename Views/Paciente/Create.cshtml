@model Turnos.Models.Paciente
<h4>Paciente</h4>
<div class="row">
    <div> 
        <form class="col s12" asp-action="Create">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="row">
                <div class="input-field col s6">
                    <i class="material-icons prefix">account_circle</i>
                    <input asp-for="Nombre" type="text" class="validate" />
                    <label asp-for="Nombre"></label>
                    <span asp-validation-for="Nombre"></span>
                </div>
                <div class="input-field col s6">
                    <i class="material-icons prefix">account_circle</i>
                    <input asp-for="Apellido" type="text" class="validate" />
                    <label asp-for="Apellido"></label>
                    <span asp-validation-for="Apellido"></span>
                </div>
                <div class="input-field col s6">
                    <i class="material-icons prefix">markunread_mailbox</i>
                    <input asp-for="Direccion" type="text" class="validate" />
                    <label asp-for="Direccion"></label>
                    <span asp-validation-for="Direccion"></span>
                </div>
                <div class="input-field col s6">
                    <i class="material-icons prefix">phone</i>
                    <input asp-for="Telefono" type="text" class="validate" />
                    <label asp-for="Telefono"></label>
                    <span asp-validation-for="Telefono"></span>
                </div>
                <div class="input-field col s6">
                    <i class="material-icons prefix">local_post_office</i>
                    <input asp-for="Email" type="email" class="validate" />
                    <label asp-for="Email" ></label>
                    <span asp-validation-for="Email"></span>
                </div>
               
            </div>
            <div class="row">
                <div class="col s6 m6">
                    <input type="submit" value="Guardar" class="btn btn-primary" />
                </div>

                <div class="col s6 m6">

                    <a asp-action="Index" class="btn waves-effect waves-light"><i class="material-icons prefix">undo</i>Volver</a>
                </div>
            </div>
        </form>
    </div>
    
</div>
<div>
    <a asp-action="Index">Volver</a>
</div>